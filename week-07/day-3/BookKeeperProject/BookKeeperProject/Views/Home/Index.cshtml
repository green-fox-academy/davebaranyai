@model BookKeeperProject.ViewModels.ListOfBooks
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Kite+One" rel="stylesheet">
    <meta charset="utf-8" />        
    <title>BookKeeper</title>
</head>
<body class="home">

    <header>
        <span><b>Add a book:</b></span>
    </header>

    <div class="container">
        <form action="/home" method="post">
            Title:
            <input type="text" name="Title" value="">
            <br />
            Author's First Name:
            <input type="text" name="AuthorFirstName" value="">
            <br />
            Author's Last Name:
            <input type="text" name="AuthorLastName" value="">
            <br />
            Year of Release:
            <input type="number" name="Year" value="">
            <br />            
            Type:
            <select name="Type">
                <option value="book">Book</option>
                <option value="magazine">Magazine</option>
                <option value="map">Map</option>
                <option value="leaflet">Leaflet</option>
            </select>
            <br />
            Location:
            <select name="Location">
                <option value="budapest">Budapest</option>
                <option value="pilis">Pilis</option>
                <option value="monor">Monor</option>
            </select>
            <br />
            Availability:
            <select name="Availability">
                <option value="available">Available</option>
                <option value="loaned">Loaned out</option>
            </select>
            <br />
            <input type="submit" value="Submit">
        </form>
    </div>

    <table>
        <tr>
            <th>Number</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Year</th>
            <th>Type</th>
            <th>Location</th>
            <th>Availability</th>
        </tr>
        @{int counter = 0; }
        @foreach (var book in Model.Books)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@book.Title</td>
                <td>@book.AuthorFirstName</td>
                <td>@book.AuthorLastName</td>
                <td>@book.Year</td>
                <td>@book.Type</td>
                <td>@book.Location</td>
                <td>@book.Availability</td>
            </tr>
        }
    </table>
</body>
</html>