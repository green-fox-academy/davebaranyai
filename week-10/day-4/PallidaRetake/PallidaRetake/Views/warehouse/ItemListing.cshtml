@model System.Collections.Generic.List<PallidaRetake.Models.Item>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Item Listing</title>
    <meta charset="utf-8" />
</head>
<body>
    <header>
        <h1>Green Fox Fashion Web Store</h1>
    </header>

    <table>
        <tr>
            <td>Item Name</td>
            <td>Manufacturer</td>
            <td>Category</td>
            <td>Size</td>
            <td>Unit Price</td>
        </tr>
        @foreach (var item in @Model)
            {
            <tr>
                <td>@item.ItemName</td>                
                <td>@item.Manufacturer</td>
                <td>@item.Category</td>
                <td>@item.Size</td>
                <td>@item.UnitPrice</td>
            </tr>
        }
    </table>

</body>
</html>
