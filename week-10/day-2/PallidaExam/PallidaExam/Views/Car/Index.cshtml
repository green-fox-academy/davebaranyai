@model System.Collections.Generic.List<PallidaExam.Models.Car>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <title>Cars</title>
    <meta charset="utf-8" />
</head>
<body>
    <form action="/search" method="get">
        <input type="text" name="q" value="" maxlength="7" />
        <button type="submit">Search</button>
        <a href="/search?police=1">Police cars only</a>
        <a href="/search?diplomat=1">Diplomats only</a>
    </form>

    @if (!@Model.Any())
    {
        <p>Sorry, the submitted licence plate is not valid</p>
    }

    @if (@Model.Any())
    {
        <table border="1">
            <tr>
                <td>Licence plate</td>
                <td>Brand</td>
                <td>Model</td>
                <td>Color</td>
                <td>Year</td>
            </tr>
            @foreach (var car in @Model)
            {
                <tr>
                    <td>@car.Plate</td>
                    <td>
                        <a href="/search/@car.CarBrand">@car.CarBrand</a>
                    </td>
                    <td>@car.CarModel</td>
                    <td>@car.Color</td>
                    <td>@car.Year</td>
                </tr>
            }
        </table>
    }
</body>
</html>